{
  "name": "jascha030/wp-starter",
  "type": "project",
  "description": "Wordpress development environment.",
  "license": "MIT",
  "authors": [
    {
      "name": "Jascha030",
      "email": "contact@jaschavanaalst.nl"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "require": {
    "php": "^7.4 | ^8.0",
    "roots/wp-password-bcrypt": "^1.0",
    "composer/installers": "^1.11",
    "roots/wordpress": "^5.8",
    "jascha030/xerox": "^0",
    "vlucas/phpdotenv": "^5.3"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "public/wordpress"
  },
  "config": {
    "vendor-dir": "public/vendor"
  },
  "scripts": {
    "post-create-project-cmd": [
      "Jascha030\\Xerox\\Composer\\Event\\RootInstallHandler::postInstall"
    ]
  }
}
